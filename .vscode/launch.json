    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "program": "${workspaceRoot}/backend/server.js"
        },
        {
            "type": "chrome",
            "request": "launch",
            "name": "Launch Chrome",
            "url": "http://localhost:8080",
            "webRoot": "${workspaceRoot}"
        },
        {
            "name": "mocha",
            "type": "node",
            "request": "launch",
            "program": "${workspaceRoot}/backend/node_modules/mocha/bin/mocha",
            "stopOnEntry": false,
            "cwd": "${workspaceRoot}/backend",
            "runtimeExecutable": null
        }
    ]
}